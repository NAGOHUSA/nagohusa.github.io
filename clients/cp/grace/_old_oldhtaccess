# Enable password protection
AuthType Basic
AuthName "Church Directory - Private Access"
AuthUserFile https://nagoh.us/clients/cp/grace/.htpasswd
Require valid-user

# Block directory listing
Options -Indexes

# Security - deny access to .ht* files
<Files ~ "^\.ht">
    Order allow,deny
    Deny from all
</Files>

# Block access to CSV files
<FilesMatch "\.(csv|txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Cache settings
<FilesMatch "\.(html|css|js)$">
    Header set Cache-Control "max-age=3600, must-revalidate"
</FilesMatch>
